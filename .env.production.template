# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Domain Configuration
DOMAIN=yourdomain.com

# Database Configuration
MONGO_ROOT_PASSWORD=your_super_secure_mongodb_password_here
MONGODB_URI=mongodb://admin:your_super_secure_mongodb_password_here@mongodb:27017/phone_management?authSource=admin
DB_NAME=phone_management

# Server Configuration
PORT=8080
GO_ENV=production

# Telegram Configuration
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyZ-REPLACE-WITH-YOUR-BOT-TOKEN
TELEGRAM_CHAT_ID=-1001234567890

# Security
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long

# CORS Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/yourdomain.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/yourdomain.com.key

# Frontend Configuration
NUXT_PUBLIC_API_BASE=https://api.yourdomain.com/api/v1
NUXT_PUBLIC_APP_NAME="Phone Number Management System"
NUXT_PUBLIC_APP_VERSION="1.0.0"
NUXT_PUBLIC_DOMAIN=yourdomain.com
NUXT_PUBLIC_SITE_URL=https://yourdomain.com
NUXT_PUBLIC_SITE_NAME="ระบบจัดการเบอร์มือถือ"
NUXT_PUBLIC_SITE_DESCRIPTION="ระบบจัดการข้อมูลเบอร์มือถือและการแจ้งเตือนผ่าน Telegram"

# Build Configuration
NODE_ENV=production
NITRO_PRESET=node-server

# Email Configuration (for SSL certificates)
SSL_EMAIL=admin@yourdomain.com

# Backup Configuration (optional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json